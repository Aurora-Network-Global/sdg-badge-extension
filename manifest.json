
{
  "manifest_version": 3,
  "name": "SDG Badge",
  "version": "1.0.0",
  "description": "Display SDG classification badges as floating widgets on webpages using Aurora SDG API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://aurora-sdg.labs.vu.nl/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["popup/popup.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SDG Badge Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "resources/*", "assets/img/*.png", "assets/css/*.css", "scripts/widget.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
